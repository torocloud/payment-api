    ],
    "steps": [
        {
            "type": "block",
            "blockType": "TRY_CATCH",
            "children": [
                {
                    "declare": [
                        {
                            "variables": [
                                {
                                    "name": "isZeroDecimalCurrency",
                                    "type": "boolean"
                                }
                            ]
                        }
                    ],
                    "lines": [
                        {
                            "type": "set",
                            "expression": "def zeroDecimalCurrencies = ['mga', 'bif', 'clp', 'pyg', 'djf', 'rwf', 'gnf', 'ugx', 'jpy','vnd', 'vuv', 'kmf', 'krw', 'xaf', 'xof', 'xpf']\n\nisZeroDecimalCurrency = paymentRequest.paymentAmount.currencyCode.toLowerCase() in zeroDecimalCurrencies",
