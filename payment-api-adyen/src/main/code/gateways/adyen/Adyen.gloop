                                                    "expression": "paymentRequest.paymentGatewayId",
                                                    "evaluate": true,
                                                    "to": [
                                                        "paymentResponse",
                                                        "paymentGatewayId"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "captured",
                                                    "to": [
                                                        "paymentResponse",
                                                        "paymentState"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "paymentResponse?.errors?.message != null ? 'Transaction failed.' : 'Transaction successful.'",
                                                    "evaluate": true,
                                                    "to": [
                                                        "paymentResponse",
                                                        "message"
                                                    ],
                                                    "priority": 1
