                                                {
                                                    "variables": [
                                                        {
                                                            "name": "AuthoriseOutput",
                                                            "type": "model",
                                                            "reference": "gateways.adyen.requestTypes.models.AuthoriseOutput",
                                                            "allowExtraProperties": true
                                                        }
                                                    ]
                                                }
                                            ],
                                            "inputs": [
                                                {
                                                    "from": [
                                                        "paymentRequest",
                                                        "authorisation",
                                                        "creditCard",
                                                        "number"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "card",
                                                        "number"
                                                    ]
                                                },
                                                {
                                                    "from": [
                                                        "paymentRequest",
                                                        "authorisation",
                                                        "creditCard",
                                                        "verificationValue"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "card",
                                                        "cvc"
                                                    ]
                                                },
                                                {
                                                    "from": [
                                                        "paymentRequest",
                                                        "authorisation",
                                                        "creditCard",
                                                        "holderName"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "card",
                                                        "holderName"
                                                    ]
                                                },
