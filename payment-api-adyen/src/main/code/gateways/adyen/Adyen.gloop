                                                    "from": [
                                                        "paymentRequest",
                                                        "paymentAmount",
                                                        "currencyCode"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "amount",
                                                        "currency"
                                                    ]
                                                },
                                                {
                                                    "from": [
                                                        "paymentRequest",
                                                        "trackerId"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "reference"
                                                    ]
                                                },
                                                {
                                                    "from": [
                                                        "paymentRequest",
                                                        "authorisation",
                                                        "creditCard",
                                                        "expiryYear"
                                                    ],
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "card",
                                                        "expiryYear"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "'adyen.url'.getPackageProperty() + \"/authorise\"",
                                                    "evaluate": true,
                                                    "to": [
                                                        "url"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "'adyen.merchantAccount'.getPackageProperty()",
                                                    "evaluate": true,
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "merchantAccount"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "isZeroDecimalCurrency ? paymentRequest.paymentAmount.value.intValue() : (paymentRequest.paymentAmount.value * 100).intValue()",
                                                    "evaluate": true,
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "amount",
                                                        "value"
                                                    ]
                                                },
                                                {
                                                    "type": "set",
                                                    "expression": "paymentRequest.authorisation.creditCard.expiryMonth < 10 ? \"0${paymentRequest.authorisation.creditCard.expiryMonth}\" : paymentRequest.authorisation.creditCard.expiryMonth",
                                                    "evaluate": true,
                                                    "to": [
                                                        "AuthoriseInput",
                                                        "card",
                                                        "expiryMonth"
                                                    ]
                                                }
                                            ],
